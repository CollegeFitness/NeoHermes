<Window x:Class="NeoHermes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeoHermes"
        mc:Ignorable="d"
        Title="NeoHermes" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="100" Margin="20,20,0,0" VerticalAlignment="Top" Width="250" Source="logo.png"/>
        <Label Content="Username" HorizontalAlignment="Left" Height="40" Margin="300,100,0,0" VerticalAlignment="Top" Width="125" FontSize="24" FontFamily="Bahnschrift Light"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="300,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="40" Margin="300,200,0,0" VerticalAlignment="Top" Width="125" FontSize="24" FontFamily="Bahnschrift Light"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="300,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
    </Grid>
</Window>
