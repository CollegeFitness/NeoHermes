<Page x:Class="NeoHermes.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeoHermes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="120" Margin="600,50,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="120"/>

        <Image HorizontalAlignment="Left" Height="100" Margin="610,60,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Source="DefaultProfile.png"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="595,180,0,0" Grid.Row="1" TextWrapping="Wrap" Text="&lt;DefaultUsername&gt;" VerticalAlignment="Top" Width="130" TextAlignment="Center" FontFamily="Microsoft Sans Serif" FontSize="14"/>
        <Button Content="Edit Profile&#xD;&#xA;" HorizontalAlignment="Left" Height="25" Margin="610,210,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" FontFamily="Verdana" FontSize="14"/>

    </Grid>
</Page>
